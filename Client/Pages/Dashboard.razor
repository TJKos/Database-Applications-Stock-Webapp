            margin-top: 20px;
        }

        .image {
            max-width: fit-content;
            height: auto;
        }

        .addbutton {
            color: crimson;
            float: right;
            margin-left: -50%;
            margin-right: 2em;
        }

        .articleimage {
            width: auto;
            max-width: 300px;
            height: 90px;
            float: right;
            margin: 0 0 0 15px;
            @* align: right; *@
        }

        .e-dashboardlayout.e-control .e-panel{
            border: 0px;
            box-shadow:none;
        }

        .e-dashboardlayout.e-control .e-panel:hover{
            border: 0px;
